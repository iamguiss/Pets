<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetsActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/idTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="TabPets">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idItemCachorro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Cachorro"
            android:text="Cachorro" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idItemGato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Gato"
            android:text="Gato" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idItemPassaro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Passaro"
            android:text="Passaro" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/idViewPagerPets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/idTabLayout" />

</RelativeLayout>